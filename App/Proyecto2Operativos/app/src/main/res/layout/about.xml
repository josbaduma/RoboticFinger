<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:background="@drawable/about_border"
    android:padding="10px"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="About"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Proyecto 2 - Principios de SO"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Creado por:"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="José Daniel Badilla Umaña"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Luis Alonso Barboza Artavia"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Jason Leitón Jiménez"
    android:gravity="center"
    android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Carlos Peralta Coto"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="II Semestre - 2017"
        android:gravity="center"
        android:textColor="#000000"/>


</LinearLayout>